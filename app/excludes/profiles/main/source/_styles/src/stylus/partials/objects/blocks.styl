/* Generic Placeholder Brick: REMOVE FOR PRODUCTION */
.brick
  background: #dcdddc
  padding: $pad-double
  text-align: center
  font-weight: bold
  border-bottom: 1px solid $gray-light-2
/* Block */
.block
  overflow: hidden
  p:last-child
    margin-bottom: 0
/* Hero Block */
.block-hero
  margin-bottom: $space-half
  .b-thumb
    img
      display: block
  @media all and (min-width: $bp-large)
    position: relative
    .b-text
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      background: $dim
      color: $white
      padding: $pad-and-half
/* Block Thumbnail with Headline */
.block-thumb
  width: 100%
  border-collapse: collapse
  .b-inner
    display: block
    overflow: hidden
  .headline
    @media all and (max-width: $bp-small-2 - 1px)
      font-size: 1.8rem
    @media all and (min-width: $bp-small)
      float: right
      padding: 0 $pad
      width: 70%
  .b-thumb
    float: left
    @media all and (max-width: $bp-small - 1px)
      max-width: 30rem
    @media all and (min-width: $bp-small)
      width: 30%
  .b-text
    float: right
    @media all and (max-width: $bp-small-2 - 1px)
      p
        font-size: 1.4rem
    @media all and (min-width: $bp-small)
      width: 70%
      padding: 0 $pad
/* Block Headline Summary */
.block-headline-summary
  a
    display: block
    padding: $pad-half
/* Block Inset */
.block-inset
  position: relative
  margin-bottom: $space-half
  position: relative
  .headline
    font-size: 1.8rem
  .b-thumb
    position: relative
    z-index: 0
    img
      display: block
  .b-text
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    background: $dim
    color: $white
    padding: $pad-half
/* Hero and Insets */
.hero-and-insets
  display: flex
  flex-wrap: wrap
  justify-content: space-between
.block-hero,
.block-inset
  .inner
    display: block
    position: relative
@media all and (min-width: $bp-small) and (max-width: $bp-large - 1px)
  .block-hero,
  .block-inset
    width: calc(50% - 0.4rem)
  .block-hero
    .b-thumb
      padding-top: 75%
    img
      position: absolute
      top: 0
      left: 0
    .b-text
      background: $dim
      color: $white
      overflow: hidden
      padding: $pad-half
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      height: 7.36rem
@media all and (min-width: $bp-large)
  .block-hero
    width: 100%
  .block-inset
    padding-top: $pad-half
    width: calc(33.3333333% - 1.0666666rem)
/* Block Thumb with Summary */
.block-thumb-summary
  .b-thumb
    float: left
    width: 50%
  .b-text
    margin-left: 50%
    padding: $pad-half
